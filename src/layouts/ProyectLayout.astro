---
import Layout from './Layout.astro';
import { Bento, Container } from '@ui';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <Container>
    <Bento
      transition:name="hero"
      class="selection:bg group flex h-[50vh] min-h-[300px] w-full justify-between overflow-hidden"
    >
      <article
        class="absolute bottom-0 left-0 top-0 z-10 flex w-full flex-col justify-between p-4 lg:p-12"
        style="background-image: linear-gradient(0deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 25%, rgba(0,0,0,0) 50%, rgba(0,0,0,0) 80%, rgba(0,0,0,0.5) 100%);"
      >
        <div class="flex justify-between">
          <h3 class="uppercase">site and Brand development</h3>
        </div>
        <div>
          <h1 class="mb-4 text-right text-8xl drop-shadow-xl">{frontmatter.title}</h1>
          <div class="text-right text-2xl opacity-60 drop-shadow-xl">
            {frontmatter.description}
          </div>
        </div>
      </article>

      <img
        class="object-coveropacity-90 absolute right-0 top-0 z-0 block h-full w-full"
        src={frontmatter.image.url}
        alt={frontmatter.image.alt}
      />
    </Bento>
  </Container>
  <Container>
    <div class="md-content p-4 lg:p-12">
      <slot />
    </div>
  </Container>
</Layout>
<style is:global>
  /* Estilos para Markdown con Tailwind CSS */
  .md-content h1 {
    @apply mb-4 text-4xl font-bold;
  }
  .md-content h2 {
    @apply mb-3 text-3xl font-bold;
  }
  .md-content h3 {
    @apply mb-2 text-2xl font-bold;
  }
  .md-content h4 {
    @apply mb-2 text-xl font-bold;
  }
  .md-content h5 {
    @apply mb-2 text-lg font-bold;
  }
  .md-content h6 {
    @apply mb-2 text-base font-bold;
  }

  .md-content p {
    @apply my-4 text-base leading-6;
  }

  .md-content ul,
  .md-content ol {
    @apply my-4 list-disc pl-6;
  }
  .md-content li {
    @apply mb-2;
  }

  .md-content a {
    @apply underline;
  }

  .md-content img {
    @apply my-4;
  }

  .md-content blockquote {
    @apply my-4 border-l-4 py-2 pl-4 italic;
  }

  .md-content em {
    @apply italic;
  }
  .md-content strong {
    @apply font-bold;
  }

  .md-content code {
    @apply rounded-md px-1 py-1;
  }

  .md-content pre {
    @apply my-4 overflow-auto rounded-md p-4;
  }

  .md-content hr {
    @apply my-4 border-t;
  }
</style>
