---
import { Bento } from '@ui';

const { job } = Astro.props;
---

<Bento class="job-card bg group flex h-[50vh] min-h-[300px] justify-between overflow-hidden">
  <div
    class="absolute bottom-0 left-0 top-0 z-10 flex w-full flex-col justify-between p-4 lg:p-12"
    style="background-image: linear-gradient(0deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 25%, rgba(0,0,0,0) 50%, rgba(0,0,0,0) 80%, rgba(0,0,0,0.5) 100%);"
  >
    <div class="flex justify-between">
      <span class="uppercase">site and Brand development</span>
    </div>
    <span class="text-right text-8xl drop-shadow-xl">{job.company}</span>
  </div>

  <img
    class="absolute right-0 top-0 z-0 block h-full w-full object-cover opacity-30 transition group-hover:opacity-90"
    src={job.image}
  />
</Bento>
<style>
  .job-card {
    width: var(--items-width);
  }
  img {
    object-position: 100% 0;
  }
</style>
