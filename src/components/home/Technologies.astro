---
import { technologies } from '../../data/technologies.json';
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-8 lg:gap-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Tecnolog√≠as y software</h2>
      <div class="tech-list inline-flex flex-wrap gap-6">
        {
          technologies.map((tech) => (
            <div class="shrink-0 justify-center">
              <span class="border-1 border--primary-950/70 relative flex  items-center justify-between gap-2 rounded-full border bg-transparent px-5 py-3 text-lg font-medium">
                <img src={tech.icon} class="h-8" alt="" />
                <span>{tech.name}</span>
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .tech-list {
    animation: slide 30s linear infinite;
    transform: translateX(0);
  }
  @keyframes slide {
    0% {
      transform: translate(0);
    }
    100% {
      transform: translate(-100%);
    }
  }
</style>
